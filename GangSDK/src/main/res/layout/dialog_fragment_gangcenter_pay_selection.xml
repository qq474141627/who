<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="229dip"
    android:layout_height="246dip"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="229dip"
        android:layout_height="246dip"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="223dip"
            android:layout_height="240dip"
            android:layout_marginTop="6dip"
            android:background="@mipmap/qm_bg_pop_out">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center"
                android:text="提 示"
                android:textStyle="bold"
                android:textColor="@color/xlganginfo_dialog_donate_title_color"
                android:textSize="19sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tvTitle"
                android:background="@mipmap/qm_bg_pop_in">

                <TextView
                    android:id="@+id/tvPaySelectionTitle"
                    android:layout_marginTop="20dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:text="支付方式"
                    android:gravity="center"
                    android:textSize="21sp"
                    android:textColor="@color/xlganginfo_dialog_donate_text_hint_color" />

                <TextView
                    android:id="@+id/tvPaySelectionContent"
                    android:layout_marginTop="27dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPaySelectionTitle"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:text="请您选择支付方式"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/xlganginfo_dialog_donate_text_hint_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:layout_below="@+id/tvPaySelectionContent"
                    android:layout_marginTop="18dip"
                    android:layout_marginLeft="18dip"
                    android:layout_marginRight="18dip">

                    <Button
                        android:id="@+id/btnAlipay"
                        android:layout_width="90dip"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:text="支付宝"
                        android:textStyle="bold"
                        android:textColor="@color/xl_dialog_button_confirm_color"
                        android:background="@mipmap/qm_btn_pop_pay_alipay" />

                    <Button
                        android:id="@+id/btnWeixinpay"
                        android:layout_width="90dip"
                        android:layout_height="match_parent"
                        android:text="微信"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/xl_dialog_button_confirm_color"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/qm_btn_pop_pay_weixinpay"  />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/textClose"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/qm_btn_pop_close" />
    </RelativeLayout>
</RelativeLayout>