<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="229dip"
    android:layout_height="246dip"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="229dip"
        android:layout_height="246dip"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="223dip"
            android:layout_height="240dip"
            android:layout_marginTop="6dip"
            android:background="@mipmap/qm_bg_pop_out_tips">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:gravity="center"
                android:text="提 示"
                android:textStyle="bold"
                android:textColor="@color/xlgangmembers_dialog_exitgang_title_color"
                android:textSize="19sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tvTitle"
                android:background="@mipmap/qm_bg_pop_in_tips">

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="195dip"
                    android:layout_height="44dip"
                    android:layout_marginTop="30dip"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/qm_bg_pop_exitgang_content"
                    android:textSize="16sp"
                    android:textColor="@color/xlgangmembers_dialog_exitgang_text_input_color"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/textHint"
                    android:layout_below="@+id/tvContent"
                    android:layout_marginTop="20dip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dip"
                    android:layout_marginRight="40dip"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.2"
                    android:textSize="11sp"
                    android:textColor="@color/xlgangmembers_dialog_exitgang_text_hint_color" />

                <RelativeLayout
                    android:id="@+id/relativeBottom"
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="18dip"
                    android:layout_marginLeft="18dip"
                    android:layout_marginRight="18dip">

                    <Button
                        android:id="@+id/btnConfirm"
                        android:layout_width="90dip"
                        android:layout_height="match_parent"
                        android:textSize="16sp"
                        android:text="确认"
                        android:textStyle="bold"
                        android:textColor="@color/xl_dialog_button_confirm_color"
                        android:background="@mipmap/qm_btn_pop_sure_tips" />

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="90dip"
                        android:layout_height="match_parent"
                        android:text="取消"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/xl_dialog_button_confirm_color"                        android:layout_alignParentRight="true"
                        android:background="@mipmap/qm_btn_pop_cancel_tips"  />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/textClose"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/qm_btn_pop_close_tips" />
    </RelativeLayout>
</RelativeLayout>
