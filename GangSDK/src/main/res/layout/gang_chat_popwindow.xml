<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="97dip"
        android:layout_height="110dip"
        android:layout_marginLeft="2dip"
        android:paddingLeft="12dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:orientation="vertical"
        android:background="@mipmap/qm_bg_gangchat_headclick">
        
        <Button
            android:id="@+id/btnChatSingle"
            android:layout_width="76dip"
            android:layout_height="25dip"
            android:background="@mipmap/qm_btn_gangchat_headclick_item"
            android:text="私聊"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/xlgangchat_pop_button_click_color"/>

        <android.support.v4.widget.Space
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dip" />

        <Button
            android:id="@+id/btnCheckUserInfo"
            android:layout_width="76dip"
            android:layout_height="25dip"
            android:background="@mipmap/qm_btn_gangchat_headclick_item"
            android:text="个人信息"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/xlgangchat_pop_button_click_color"/>

        <android.support.v4.widget.Space
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dip" />

        <Button
            android:id="@+id/btnCheckGangInfo"
            android:layout_width="76dip"
            android:layout_height="25dip"
            android:background="@mipmap/qm_btn_gangchat_headclick_item"
            android:text="社群哈哈信息"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/xlgangchat_pop_button_click_color"/>
    </LinearLayout>

</LinearLayout>