<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relateSortView"
    android:layout_width="match_parent"
    android:layout_height="74dip"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="@drawable/qm_bg_item">

        <ImageView
            android:id="@+id/imageViewGangIcon"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_marginLeft="30dip"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_toLeftOf="@+id/LlPeopleNumber"
            android:layout_toRightOf="@id/imageViewGangIcon"
            android:layout_alignTop="@id/imageViewGangIcon"
            android:layout_marginTop="2dip"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewGangLevel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/xlmessagecenter_item_invite_gang_level_color"
                android:textSize="13sp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginRight="10dip"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textViewGangName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="公会名称公会名称公会名称公会名称公会名称公会名称公会名称"
                android:textColor="@color/xlmessagecenter_item_invite_gang_name_color"
                android:textSize="13sp"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/imageViewGangLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LlPeopleNumber"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/btnAccept"
            android:layout_marginTop="8dip"
            android:layout_marginLeft="18dip"
            android:layout_marginRight="12dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_gravity="bottom"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:src="@mipmap/qm_icon_member_num"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/textViewGangPeopleNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:text="8888888888888888888"
                android:textSize="12sp"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/xlmessagecenter_item_invite_gang_people_number_color"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewGangDescribe"
            android:layout_toLeftOf="@+id/btnRefuse"
            android:layout_toRightOf="@+id/imageViewGangIcon"
            android:layout_alignBottom="@+id/imageViewGangIcon"
            android:layout_marginBottom="6dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="88888888888888888888888888"
            android:textColor="@color/xlmessagecenter_item_invite_gang_describe_color"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            android:gravity="center_vertical"/>

        <Button
            android:id="@+id/btnRefuse"
            android:layout_alignTop="@+id/btnAccept"
            android:layout_toLeftOf="@+id/btnAccept"
            android:layout_width="62dip"
            android:layout_height="30dip"
            android:layout_marginRight="5dip"
            android:text="拒绝邀请"
            android:textSize="@dimen/xl_recommend_button_apply"
            android:textColor="@color/xlmessagecenter_item_invite_refuse_color"
            android:background="@mipmap/qm_btn_message_notify_refuse" />

        <Button
            android:id="@+id/btnAccept"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="23dip"
            android:layout_marginBottom="10dip"
            android:layout_width="62dip"
            android:layout_height="30dip"
            android:text="加入社群"
            android:textSize="@dimen/xl_recommend_button_apply"
            android:textColor="@color/xlmessagecenter_item_invite_join_color"
            android:background="@mipmap/qm_btn_message_notify_join" />
    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="4dip" />
</LinearLayout>