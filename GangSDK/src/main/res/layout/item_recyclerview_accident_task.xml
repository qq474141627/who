<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/viewNotifyTask"
        android:layout_marginTop="8dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/qm_bg_gangchat_tips"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTask"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="3dip"
            android:paddingTop="10dip"
            android:paddingBottom="11dip"
            android:paddingLeft="35dip"
            android:paddingRight="10dip"
            android:textColor="@color/xlgangchat_task_text_color"
            android:textSize="11sp" />

        <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_width="80dip"
            android:layout_height="27dip">

            <Button
                android:id="@+id/btnTaskAttack"
                android:layout_width="50dip"
                android:layout_height="22dip"
                android:textSize="13sp"
                android:background="@mipmap/qm_btn_gangchat_tip_attack"
                android:textColor="@color/xlgangchat_task_attack_color"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>