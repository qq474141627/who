<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="76dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="@drawable/qm_bg_item">

        <ImageView
            android:id="@+id/imageGameIcon"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="15dip"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/btnGameDownload"
            android:layout_width="70dip"
            android:layout_height="28dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dip"
            android:background="@mipmap/qm_btn_gamecenter_start"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/xlgamecenter_item_button_start_color"/>

        <TextView
            android:id="@+id/textGameName"
            android:layout_toRightOf="@+id/imageGameIcon"
            android:layout_toLeftOf="@+id/btnGameDownload"
            android:layout_alignTop="@+id/imageGameIcon"
            android:layout_marginTop="0dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/xlgamecenter_item_text_name_color"/>

        <TextView
            android:id="@+id/textGameDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btnGameDownload"
            android:layout_toRightOf="@id/imageGameIcon"
            android:layout_alignBottom="@id/imageGameIcon"
            android:layout_marginBottom="6dip"
            android:textSize="11sp"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/xlgamecenter_item_text_des_color"/>
    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="6dip" />
</LinearLayout>