<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="23dip"
    android:paddingRight="63dip">

    <ImageView
        android:id="@+id/imageUserPic"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_toRightOf="@+id/imageUserPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageUserPic"
        android:layout_marginLeft="5dip"
        android:background="@drawable/qm_bg_gangchat_left">

        <LinearLayout
            android:id="@+id/linearUserInfo"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="22dip"
            android:orientation="horizontal"
            android:paddingLeft="20dip"
            android:paddingRight="10dip">

            <TextView
                android:id="@+id/textUserName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/xlgangchat_item_gang_name_color"
                android:textSize="13sp"
                android:gravity="center_vertical"/>

            <ImageView
                android:id="@+id/imageGangIcon"
                android:layout_width="19dp"
                android:layout_height="19dip"
                android:layout_marginLeft="5dip"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <TextView
            android:layout_below="@+id/linearUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dip"
            android:paddingBottom="6dip"
            android:paddingLeft="20dip"
            android:paddingRight="9dip"
            android:text="请升级到最新版本来查看这条消息"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="11sp"
            android:lineSpacingExtra="2dp" />
    </RelativeLayout>

</RelativeLayout>