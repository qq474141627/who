<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="23dip"
    android:paddingRight="63dip">

    <ImageView
        android:id="@+id/imageFromUserPic"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageFromUserPic"
        android:layout_toRightOf="@+id/imageFromUserPic"
        android:layout_marginLeft="5dip"
        android:background="@drawable/qm_bg_gangchat_left">

        <LinearLayout
            android:id="@+id/linearFromUserInfo"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dip"
            android:paddingRight="10dip">

            <TextView
                android:id="@+id/textFromUserName"
                android:layout_width="wrap_content"
                android:layout_height="22dip"
                android:textColor="@color/xlgangchat_item_gang_name_color"
                android:textSize="13sp"
                android:gravity="center_vertical"/>

            <ImageView
                android:id="@+id/imageGangIcon"
                android:layout_width="19dip"
                android:layout_height="19dip"
                android:layout_marginLeft="5dip"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/RlClickableView"
            android:layout_below="@+id/linearFromUserInfo"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dip"
            android:paddingBottom="10dip"
            android:paddingLeft="20dip"
            android:paddingRight="9dip"
            android:gravity="center_vertical">
            
            <ImageView
                android:id="@+id/imageViewIcon"
                android:layout_width="46dip"
                android:layout_height="46dip"
                android:src = "@mipmap/ic_launcher"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="141dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/imageViewIcon"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/xlgangchat_item_chat_left_text_color"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/textViewContent"
                android:layout_width="141dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@+id/imageViewIcon"
                android:layout_below="@+id/textViewTitle"
                android:text=""
                android:textSize="11sp"
                android:textColor="@color/xlgangchat_item_chat_left_second_text_color"
                android:maxLines="2"
                android:ellipsize="end"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
