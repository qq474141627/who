<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="23dip"
    android:paddingRight="63dip">

    <ImageView
        android:id="@+id/imageFromVoiceUserPic"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_toRightOf="@+id/imageFromVoiceUserPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageFromVoiceUserPic"
        android:layout_marginLeft="5dip"
        android:background="@drawable/qm_bg_gangchat_left">

        <LinearLayout
            android:id="@+id/linearFromUserInfo"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dip"
            android:paddingRight="10dip">

            <TextView
                android:id="@+id/textFromVoiceUserName"
                android:layout_width="wrap_content"
                android:layout_height="22dip"
                android:textColor="@color/xlgangchat_item_gang_name_color"
                android:textSize="13sp"
                android:gravity="center_vertical"/>

            <ImageView
                android:id="@+id/imageGangIcon"
                android:layout_width="19dip"
                android:layout_height="19dip"
                android:layout_marginLeft="5dip"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/linearFromUserInfo"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="7dip"
            android:paddingBottom="10dip"
            android:paddingLeft="20dip"
            android:paddingRight="9dip"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/linearFromVoice"
                android:layout_width="100dip"
                android:layout_height="20dip"
                android:background="@drawable/qm_record_bg_voice_play"
                android:padding="3dip">

                <View
                    android:id="@+id/imageFromVoice"
                    android:layout_width="15dip"
                    android:layout_height="match_parent"
                    android:background="@mipmap/qm_record_volume_left3"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textFromVoiceTime"
                android:layout_marginLeft="5dip"
                android:layout_width="wrap_content"
                android:layout_height="20dip"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/xlgangchat_item_chat_voice_time_color"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
