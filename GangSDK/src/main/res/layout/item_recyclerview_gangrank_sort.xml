<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewAll"
    android:layout_width="match_parent"
    android:layout_height="74dip"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="@drawable/qm_bg_item">

        <RelativeLayout
            android:id="@+id/viewPosition"
            android:layout_width="42dip"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="6dip"
            android:background="@mipmap/qm_bg_gangrank_sort">

            <TextView
                android:id="@+id/ivNumPosition"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="30sp"
                android:textColor="@color/xlgangrank_item_text_number_color"/>
        </RelativeLayout>


        <ImageView
            android:id="@+id/imageGangIcon"
            android:layout_width="50dip"
            android:layout_height="50dp"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="12dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/viewPosition"
            android:scaleType="centerInside" />

        <LinearLayout
            android:id="@+id/linearTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageGangIcon"
            android:layout_marginTop="3dip"
            android:layout_toRightOf="@+id/imageGangIcon"
            android:layout_toLeftOf="@+id/relativeRight"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textGangLevel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/xlgangrank_item_text_name_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textGangName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dip"
                android:gravity="center"
                android:textColor="@color/xlgangrank_item_text_name_color"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textGangDescribe"
            android:layout_marginBottom="3dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageGangIcon"
            android:layout_toRightOf="@+id/imageGangIcon"
            android:layout_toLeftOf="@+id/relativeRight"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/xl_gangrank_item_declaration"
            android:textColor="@color/xlgangrank_item_text_declaration_color"/>

        <RelativeLayout
            android:id="@+id/relativeRight"
            android:layout_width="75dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dip">

            <TextView
                android:id="@+id/tvTitleName"
                android:layout_marginTop="14dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/xlgangrank_item_text_type_color"/>

            <TextView
                android:id="@+id/tvNums"
                android:layout_width="match_parent"
                android:layout_height="21dip"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dip"
                android:background="@mipmap/qm_bg_gangrank_num"
                android:textSize="13sp"
                android:gravity="center"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/xlgangrank_item_text_value_color"/>
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="4dip" />
</LinearLayout>
