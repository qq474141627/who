<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewAll"
    android:layout_width="match_parent"
    android:layout_height="74dip"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="@drawable/qm_bg_item">

        <ImageView
            android:id="@+id/ivHeader"
            android:layout_width="50dip"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="10dip"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="25dip"
            android:layout_height="13dip"
            android:background="@mipmap/qm_bg_gamelevel"
            android:layout_marginLeft="28dip"
            android:layout_marginTop="8dip"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="@color/xlgangmembers_item_text_lelvel_color"
            android:textSize="7sp" />

        <LinearLayout
            android:id="@+id/linearTop"
            android:layout_width="wrap_content"
            android:layout_height="16dip"
            android:layout_toRightOf="@+id/ivHeader"
            android:layout_toLeftOf="@+id/tvProfession"
            android:layout_alignTop="@+id/ivHeader"
            android:layout_marginTop="4dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNickname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/xlgangmembers_item_text_name_color"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/ivIsme"
                android:layout_width="16dip"
                android:layout_height="16dp"
                android:layout_marginLeft="4dip"
                android:textSize="11sp"
                android:gravity="center"
                android:text="我"
                android:textColor="@color/xlgangmembers_item_text_me_color"
                android:background="@mipmap/qm_icon_gangmembers_me" />

            <TextView
                android:id="@+id/ivNotalk"
                android:layout_width="40dip"
                android:layout_height="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="2dip"
                android:textSize="11sp"
                android:gravity="center"
                android:text="被禁言"
                android:textColor="@color/xlgangmembers_item_text_mute_color"
                android:background="@mipmap/qm_icon_gangmembers_mute" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvProfession"
            android:layout_width="36dip"
            android:layout_height="16dip"
            android:layout_alignTop="@+id/linearTop"
            android:layout_toLeftOf="@+id/relativeRight"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/xlgangmembers_item_text_profession_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tvNums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivHeader"
            android:layout_marginBottom="4dip"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/relativeRight"
            android:textColor="@color/xlgangmembers_item_text_contribution_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvPosition"
            android:layout_width="wrap_content"
            android:layout_height="17dip"
            android:layout_alignBottom="@+id/ivHeader"
            android:layout_marginBottom="4dip"
            android:layout_toRightOf="@+id/ivHeader"
            android:background="@drawable/qm_bg_role2"
            android:gravity="center"
            android:textColor="@color/xlgangmembers_item_text_position_color"
            android:textSize="10sp" />

        <RelativeLayout
            android:id="@+id/relativeRight"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:textSize="12sp"
                android:padding="2dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:text="超过三个月"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/xlgangmembers_item_text_online_color"/>

            <Button
                android:id="@+id/btnOut"
                android:layout_centerHorizontal="true"
                android:layout_width="60dip"
                android:layout_height="28dip"
                android:layout_centerVertical="true"
                android:background="@mipmap/qm_btn_gangmembers_exitgang"
                android:textColor="@color/xlgangmembers_item_button_exitgang_color"
                android:textSize="12sp"
                android:text="退出社群"
                android:textStyle="bold"/>
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="4dip" />
</LinearLayout>