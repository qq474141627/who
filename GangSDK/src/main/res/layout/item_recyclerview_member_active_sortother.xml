<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewAll"
    android:layout_width="match_parent"
    android:layout_height="57dip"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dip"
        android:background="@drawable/qm_bg_items_frame">

        <TextView
            android:id="@+id/tvNumPosition"
            android:layout_width="45dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="3dip"
            android:textSize="25sp"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:background="@mipmap/qm_bg_memberrank_sort_frame"
            android:textColor="@color/xlgangmember_active_item_text_number_color" />

        <LinearLayout
            android:id="@+id/linearTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvNumPosition"
            android:layout_toLeftOf="@+id/relativeRight"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="25dip"
                android:layout_height="13dip"
                android:lines="1"
                android:ellipsize="end"
                android:background="@mipmap/qm_bg_gamelevel"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="@color/xlgangmember_active_item_text_lelvel_color"
                android:textSize="7sp" />

            <TextView
                android:id="@+id/tvPosition"
                android:layout_width="wrap_content"
                android:layout_height="17dip"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="5dip"
                android:background="@drawable/qm_bg_role2"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="@color/xlgangmember_active_item_text_position_color"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/xlgangmember_active_item_text_name_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvProfession"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:gravity="center"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/xlgangmember_active_item_text_profession_color"
                android:textSize="13sp" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/relativeRight"
            android:layout_width="75dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dip">

            <TextView
                android:id="@+id/tvTitleName"
                android:layout_marginTop="7dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="活跃值"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/xlgangmember_active_item_text_active_color"/>

            <TextView
                android:id="@+id/tvNums"
                android:layout_width="match_parent"
                android:layout_height="21dip"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7dip"
                android:background="@mipmap/qm_bg_memberrank_num"
                android:textSize="13sp"
                android:gravity="center"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/xlgangmember_active_item_text_value_color"/>
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="4dip" />
</LinearLayout>

