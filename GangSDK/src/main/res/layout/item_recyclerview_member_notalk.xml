<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewAll"
    android:layout_width="match_parent"
    android:layout_height="74dip"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="@drawable/qm_bg_item">

        <ImageView
            android:id="@+id/ivHeader"
            android:layout_width="50dip"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="10dip"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="25dip"
            android:layout_height="13dip"
            android:background="@mipmap/qm_bg_gamelevel"
            android:layout_marginLeft="28dip"
            android:layout_marginTop="8dip"
            android:gravity="center"
            android:padding="2dp"
            android:textColor="@color/xlgangmember_mute_item_text_lelvel_color"
            android:textSize="7sp" />

        <LinearLayout
            android:id="@+id/linearTop"
            android:layout_width="match_parent"
            android:layout_height="16dip"
            android:layout_toRightOf="@+id/ivHeader"
            android:layout_alignTop="@+id/ivHeader"
            android:layout_marginTop="4dip"
            android:layout_marginRight="30dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNickname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/xlgangmember_mute_item_text_name_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ivIsme"
                android:layout_width="16dip"
                android:layout_height="16dp"
                android:layout_marginLeft="8dip"
                android:textSize="11sp"
                android:gravity="center"
                android:text="我"
                android:textColor="@color/xlgangmember_mute_item_text_me_color"
                android:background="@mipmap/qm_icon_gangmembers_me" />

            <TextView
                android:id="@+id/tvProfession"
                android:layout_width="36dip"
                android:layout_height="16dip"
                android:layout_marginRight="10dip"
                android:layout_marginLeft="8dip"
                android:gravity="center"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/xlgangmember_mute_item_text_profession_color"
                android:textSize="12sp" />

            <android.support.v4.widget.Space
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/xlgangmember_mute_item_text_time_color"
                android:gravity="center"
                android:paddingLeft="2dip"
                android:paddingRight="2dip"
                android:textSize="12sp"
                android:text="剩余：12:00" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivHeader"
            android:layout_marginBottom="4dip"
            android:layout_toRightOf="@+id/ivHeader"
            android:background="@drawable/qm_bg_role2"
            android:gravity="center"
            android:textColor="@color/xlgangmember_mute_item_text_position_color"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnOut"
            android:layout_width="60dp"
            android:layout_height="28dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30dip"
            android:layout_marginBottom="9dip"
            android:textStyle="bold"
            android:background="@mipmap/qm_btn_gangmember_cancel_mute"
            android:text="解除禁言"
            android:textColor="@color/xlgangmember_mute_item_button_cancel_color"
            android:textSize="12sp" />
    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="4dip" />
</LinearLayout>