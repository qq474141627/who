<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="30dip"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginRight="2dip">

            <ImageButton
                android:id="@+id/btnMessageCenter"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:background="@mipmap/qm_btn_message_center"/>

            <ImageView
                android:id="@+id/imageMessageRedpoint"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_width="13dip"
                android:layout_height="13dip"
                android:src="@mipmap/qm_icon_message_center_redpoint"/>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/btnGameCenter"
            android:visibility="gone"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:background="@mipmap/qm_btn_game_center"/>

        <ImageButton
            android:id="@+id/btnUserCenter"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginLeft="2dip"
            android:background="@mipmap/qm_btn_user_center"/>
    </LinearLayout>
</RelativeLayout>